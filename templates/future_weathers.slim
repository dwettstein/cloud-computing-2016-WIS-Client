h2
  | Future Weathers

form action="#{@heroku_api}/future_weathers"
  
  == param_input("IP", "ip", get_browser_ip())
  == dropdown_input("Forecast Days", "x", [1, 2, 3, 4, 5], false)
  == dropdown_input("Sort by", "sort", ["temperature", "humidity", "pressure", "cloud", "wind"], true)

  input.btn.btn-primary.right#submit type="submit" value="Send"
